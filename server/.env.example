# Secure Scanner Viewer - Server Environment Configuration
# Copy this file to .env and update the values for your environment

# Server Configuration
PORT=4000
NODE_ENV=production

# CORS Configuration - Frontend URLs that can access the API
# For development: http://localhost:5173
# For production: https://your-app.netlify.app,https://your-app.vercel.app
WEB_ORIGIN=http://localhost:5173

# JWT Configuration
JWT_SECRET=change_me_in_production_minimum_32_characters
JWT_REFRESH_SECRET=change_me_too_in_production_minimum_32_characters
ACCESS_TOKEN_EXPIRES=15m
REFRESH_TOKEN_EXPIRES=7d

# Database Configuration
# Railway will auto-detect volume mount path
# For local development: file:./data/app.db
# For Railway with volume: file:/data/db/app.db
DATABASE_URL=file:./data/app.db

# File Storage Configuration
# Railway volume paths (auto-detected if RAILWAY_VOLUME_MOUNT_PATH is set)
# For local development: ./storage/local
# For Railway with volume: /data/storage/local
LOCAL_ROOT=/data/storage/local
DEFAULT_SOURCE=/data/source

# File Retention Configuration
RETENTION_DAYS=2
RETENTION_MINUTES=0

# Admin User Configuration
# Change these in production!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Admin@123

# Railway-specific (automatically set by Railway)
# RAILWAY_VOLUME_MOUNT_PATH=/data
# RAILWAY_PUBLIC_DOMAIN=your-app.railway.app
