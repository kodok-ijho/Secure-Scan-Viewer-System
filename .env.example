# Secure Scanner Viewer - Environment Configuration
# Copy this file to .env and update the values for your environment

# Server Configuration
PORT=4000
NODE_ENV=production

# CORS Configuration - Frontend URLs that can access the API
# For development: http://localhost:5173
# For production: https://your-app.netlify.app or https://your-app.vercel.app
CORS_ORIGIN=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# File Storage Configuration
# Local directory where uploaded/indexed files will be stored
LOCAL_STORAGE_PATH=./storage

# Source Folder Configuration
# Default source folder for file indexing (can be changed via Settings page)
DEFAULT_SOURCE_FOLDER=./source-files

# File Retention Configuration
# Default number of days to keep files before automatic deletion
DEFAULT_RETENTION_DAYS=7

# Admin User Configuration
# Default admin credentials (change these in production!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Admin@123

# Security Configuration
# Enable/disable certain security features
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100

# Logging Configuration
LOG_LEVEL=info
ENABLE_ACCESS_LOGS=true

# File Upload Configuration
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=.png,.jpg,.jpeg,.pdf,.txt,.doc,.docx,.xls,.xlsx
