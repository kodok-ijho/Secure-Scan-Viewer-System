{
  "name": "secure-scanner-viewer",
  "version": "1.0.0",
  "description": "Secure Scanner Viewer System - Internal application for managing scanned documents with role-based access control",
  "private": true,
  "workspaces": [
    "web",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:web": "npm run dev --workspace=web",
    "build": "npm run build --workspace=server && npm run build --workspace=web",
    "build:server": "npm run build --workspace=server",
    "build:web": "npm run build --workspace=web",
    "start": "npm run start --workspace=server",
    "start:server": "npm run start --workspace=server",
    "start:web": "npm run preview --workspace=web",
    "test": "npm run test --workspace=web",
    "preview": "npm run preview --workspace=web",
    "cleanup": "npm run cleanup:once --workspace=server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^2.1.35"
  }
}
