# Secure Scanner Viewer - Frontend Environment Configuration
# Copy this file to .env and update the values for your environment

# API Configuration
# Backend server URL - change this to your production backend URL
# New preferred variable name (with /api suffix)
VITE_API_BASE_URL=http://localhost:4000/api

# Legacy support (will fallback to this if VITE_API_BASE_URL is not set)
VITE_API_URL=http://localhost:4000

# Application Configuration
VITE_APP_NAME=Secure Scanner Viewer
VITE_APP_VERSION=1.0.0

# Development Configuration (only used in development)
VITE_DEV_MODE=true
VITE_ENABLE_DEVTOOLS=true

# Production Configuration Examples:
# For Railway deployment:
# VITE_API_URL=https://your-backend-server.railway.app

# For Heroku deployment:
# VITE_API_URL=https://your-backend-server.herokuapp.com

# For custom domain:
# VITE_API_URL=https://api.yourdomain.com
